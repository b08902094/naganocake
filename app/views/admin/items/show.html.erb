	<h2>商品詳細</h2>
		<div>
			<%= image_tag @item.get_image("500") %>
		</div>
		<table class="table-hover">
			<tbody>
				<tr>
					<td>商品名</td>
					<td><%= @item.name %></td>
				</tr>
				<tr>
					<td>商品説明</td>
					<td><%= @item.description %></td>
				</tr>
				<tr>
					<td>ジャンル</td>
					<td><%= @item.genre.name %></td>
				</tr>
				<tr>
					<td>税抜価格</td>
					<td><%= @item.price_before_tax %>円</td>
				</tr>
				<tr>
					<td>販売ステータス</td>
					<td>
						<% if @item.is_active? %>
							<span class="text-active">販売中</span>
						<% else %>
							<span class="text-invalid">販売停止中</span>
						<% end %>
					</td>
				</tr>
			</tbody>
		</table>
	<%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
	</div>