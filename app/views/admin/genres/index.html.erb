<h4> ジャンル一覧・追加 </h4>
<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <h4 class="mt-3">ジャンル名</h4>
  <%= f.text_field :name %>
  <%= f.submit '新規登録', class: "col-xs-12 btn btn-success" %>
<% end %>

	<div class="mb3">
		<h3>ジャンル一覧</h3>
		<table class="has_border">
			<thead>
				<tr>
					<th>ジャンル名</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= link_to genre.name, admin_items_path(genre_id: genre.id), class: "underline" %></td>
						<td class="text-center"><%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>