<h4>注文一覧</h4>
<table class = "table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
      <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order) %></td>
      <td><%= order.customer.firstname + " " + order.customer.lastname %></td>
      <td><%= order.order_details.sum(:quantity) %></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>