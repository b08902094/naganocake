<h4>注文履歴詳細</h4>

<div class = "container">
  <div class = "row">
      <table class = "table">
        <tr>
          <td>購入者</td>
          <td><%= @order.name %></td>
        </tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td>〒<%= @order.postal_code + " " + @order.address + " " %></td>
        </tr>
        <tr>
          <td>支払い方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <td>注文ステータス</td>
          <td>
            <%= form_with model: @order, url: admin_order_path(@order), method: :patch do |f| %>
              <%= f.select :status, Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
              <%= f.submit "更新", class: 'btn btn-success' %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  <div class = "row">
    <h6>注文内容</h6>
      <table class = "table">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.item.with_tax_price %></td>
          <td><%= order_detail.quantity %></td>
          <td><%= order_detail.item.with_tax_price * order_detail.quantity %></td>
          <td>
            <%= form_with model: order_detail, url: admin_order_order_detail_path(order_id: @order.id, id: order_detail.id), method: :patch do |f| %>
            <%= f.select :status, OrderDetail.statuses.keys.map {|k| [I18n.t("enums.order_detail.status.#{k}"), k]} %>
            <%= f.submit "更新", class: 'btn btn-success' %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
      </table>
  </div>
</div>