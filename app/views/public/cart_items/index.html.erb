<h4>ショッピングカート</h4>
<%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, "data-confirm" => "カートを空にします。よろしいでしょうか？", class: "btn btn-danger" %>

<table class="table-hover">
    <thead>
    <tr>
        <th>商品名</th>
        <th>単価</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr><td><%= image_tag cart_item.item.get_image(100) %></td>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td>
        <%= form_with model: [cart_item.item, cart_item] do |f| %>
			<%= f.select :quantity, [*(1..10)]%>
			<%= f.submit "変更", class: "btn btn-primary"%>
		<% end %>
		</td>
        <td><%= subtotal = (cart_item.item.with_tax_price)*cart_item.quantity %></td>
        <td><%= link_to "削除", item_cart_item_path(item_id: cart_item.item.id, id: cart_item.id), method: :delete,
        "data-confirm" => "#{cart_item.item.name}をカートから削除します. よろしいですか？", class: "btn btn-danger" %></td>
    </tr>
    <% @total += subtotal %>
    <% end %>
    <tr>
        <td><%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %></td>
        <td></td>
        <td>小計</td>
        <td><%= @total %>円</td>
    </tr>
    </tbody>
</table>

<div>
	<%= link_to "注文情報入力に進む", root_path, class: "btn btn-success" %>
</div>

