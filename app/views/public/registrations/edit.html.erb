<h2><%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
      <tr>
        <td>名前</td>
        <td><%= f.label :firstname, "(姓)" %> <%= f.text_field :firstname, autofocus: true %></td>
        <td><%= f.label :lastname, "(名)" %> <%= f.text_field :lastname %></td>
      </tr>
      <tr>
      <div class="field">
        <td>フリガナ</td>
        <td><%= f.label :firstname_kana, "(セイ)" %> <%= f.text_field :firstname_kana %></td>
        <td><%= f.label :lastname_kana, "(メイ)"  %> <%= f.text_field :lastname_kana %></td>
      </div>
      </tr>
      <tr>
      <div class="field">
        <td><%= f.label :email, "メールアドレス" %>
        <td><%= f.email_field :email, autocomplete: "email" %></td>
      </div>
      </tr>
      <tr>
        <div class="field">
          <td><%= f.label :postal_code, "郵便番号" %></td>
          <td><%= f.text_field :postal_code %></td>
        </div>
      </tr>
      <tr><div class="field">
        <td><%= f.label :address, "住所"  %></td>
        <td><%= f.text_field :address %></td>
      </div></tr>

      <tr><div class="field">
        <td><%= f.label :phone , "電話番号" %></td>
        <td><%= f.text_field :phone %></td>
      </div></tr>
      <div class="actions">
        <td></td>
        <td><%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
      </div>
    </tbody>
    </table>
<% end %>

<h3>Cancel my account</h3>

<div><%= link_to "退会する", confirm_path, method: :get %></div>

<%= link_to "Back", :back %>
