<h1>商品一覧</h1>
<div class="row">
  <div class = "offset-1 col-2">
	<h5>ジャンル一覧</h5>
	<div class = "border text-center">
	<% @genres.each do |genre| %>
		<%= link_to genre.name, items_path(genre_id: genre.id) %> <br>
	<% end %>
	</div>
	</div>
  <div class = "offset-1 col-7">
    <div class="content">
		<% if params[:genre_id] %>
			<h2><%= @genre.name %>の商品一覧 (全<%= @items_count %>件)</h2>
		<% else %>
			<h2>商品一覧 (全<%= @items_count %>件)</h2>
		<% end %>
    <table class="table-hover">
    <% @items.each do |item| %>
      <tr>
      <% if item.is_active then%>
      <td><%= image_tag item.get_image("200") %></td>
      <td><%= link_to item.name, item_path(item.id) %></td>
      <td><%= item.with_tax_price %> 円 </td>
      <td></td>
      </tr>
      <% end %>
    <% end %>
    </table>
</div>
</div>