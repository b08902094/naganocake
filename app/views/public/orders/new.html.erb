<h4>注文情報入力</h4>

<%= form_with model: @order, url: order_confirm_path do |f| %>
  <%= render 'layouts/error', resource: @order %>
			<h5>支払い方法</h5>
	  	<%= f.radio_button :payment_method, "credit_card", :checked => true %>
	  	<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
	  	<%= f.radio_button :payment_method, "transfer" %>
	  	<%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
	  	<h5>お届け先</h5>
	  	<%= f.radio_button  :address_option, 0, :checked => true %>ご自身の住所
			<p>〒<%= current_customer.postal_code %> <%= current_customer.address %></p>
			<p><%= current_customer.lastname + " " +  current_customer.firstname %></p>
      <%= f.radio_button :address_option, 1 %>登録済住所から選択
			<%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :full_address), prompt: "選択してください" %>
			<%= f.radio_button :address_option, 2 %>新しいお届け先
			<table>
	  	<tbody>
				<tr><td><%= f.label :postal_code, "郵便番号(ハイフンなし7桁)" %></td>
				<td><%= f.text_field :postal_code %></td></tr>
				<tr><td><%= f.label :address, "住所" %></td>
				<td><%= f.text_field :address %></td></tr>
				<tr><td><%= f.label :name, "宛名" %></td>
				<td><%= f.text_field :name %></td></tr>
				<tr><td></td><td><%= f.submit "確認画面に進む", class: "btn btn-success" %></td></tr>
<% end %>
			</tbody>
		</table>

