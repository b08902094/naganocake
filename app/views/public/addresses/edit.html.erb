<h4>配送先編集</h4>
<table>
  <tbody>
<%= form_with model: @address, local:true do |f| %>
    <%= render 'layouts/error', resource: @address %>
		<tr><td><%= f.label :postal_code, "郵便番号(ハイフンなし7桁)" %></td>
		<td><%= f.text_field :postal_code %></td></tr>
		<tr><td><%= f.label :address, "住所" %></td>
		<td><%= f.text_field :address %></td></tr>
		<tr><td><%= f.label :name, "宛名" %></td>
		<td><%= f.text_field :name %></td></tr>
		<tr><td></td><td><%= f.submit "更新", class: "btn btn-success" %></td></tr>
<% end %>
</tbody>
</table>