<h4>配送先登録/一覧</h4>

<%= form_with model: @address, local:true do |f| %>
<%= render 'layouts/error', resource:@address %>
<%= f.label :postal_code, "郵便番号(ハイフンなし7桁)" %>
<%= f.text_field :postal_code %> <br>
<%= f.label :address, "住所" %>
<%= f.text_field :address %><br>
<%= f.label :name, "宛名" %>
<%= f.text_field :name %><br>
<%= f.submit "新規登録", class: "btn btn-success" %>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td><%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>   <%= link_to "削除する", address_path(address), method: :delete, "data-confirm" => "削除します。本当によろしいですか？", class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>