<h4>配送先登録/一覧</h4>
<table>
  <tbody>
<%= form_with model: @address, local:true do |f| %>
    <%= render 'layouts/error', resource:@address %>
		<tr><td><%= f.label :postal_code, "郵便番号(ハイフンなし7桁)" %></td>
		<td><%= f.text_field :postal_code %></td></tr>
		<tr><td><%= f.label :address, "住所" %></td>
		<td><%= f.text_field :address %></td></tr>
		<tr><td><%= f.label :name, "宛名" %></td>
		<td><%= f.text_field :name %></td></tr>
		<tr><td></td><td><%= f.submit "新規登録", class: "btn btn-success" %></td></tr>
<% end %>
</tbody>
</table>
<table class="table table-hover">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td><%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>   <%= link_to "削除する", address_path(address), method: :delete, "data-confirm" => "削除します。本当によろしいですか？", class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>